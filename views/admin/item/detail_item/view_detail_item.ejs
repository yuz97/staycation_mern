<%- include('../../../partials/header') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <%- include('../../../partials/sidebar') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('../../../partials/navbar')  %>
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <%- include('../../../partials/alertMessage')  %>
                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800"><%= title %> </h1>

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="profile-tab" data-toggle="tab"
                                data-target="#show-feature" type="button" role="tab" aria-controls="profile"
                                aria-selected="true">Show
                                Feature</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-toggle="tab" data-target="#show-activity"
                                type="button" role="tab" aria-controls="profile" aria-selected="false">Show
                                Activity</button>
                        </li>


                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="show-feature" role="tabpanel"
                            aria-labelledby="home-tab">
                            <%- include('show_feature')  %></div>
                        <div class="tab-pane fade show " id="show-activity" role="tabpanel" aria-labelledby="home-tab">
                            <%- include('show_activity')  %></div>


                    </div>
                    <!-- End of Main Content -->
                    <%- include('../../../partials/footer')  %>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->

            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <!-- Logout Modal-->
            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                        <div class="modal-body">Select "Logout" below if you are ready to end your current session.
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <a class="btn btn-primary" href="login.html">Logout</a>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('modal_feature') %>
            <%- include('modal_activity') %>
            <%- include('../../../partials/javascript')  %>
            <script>
                $(document).ready(function () {

                    //show datatable
                    // $('#dataTableActivity').DataTable();


                    //modal activity
                    $('#dataTableActivity').on('click', '.btn-update-activity', function () {
                        $('#modalActivity').modal('show');
                        let id = $(this).data('id');
                        let name = $(this).data('name');
                        let type = $(this).data('type');
                        let itemid = $(this).data('itemid');


                        $('.id').val(id)
                        $('.name').val(name)
                        $('.type').val(type)
                        $('.itemid').val(itemid)
                    })

                    //show modal feature
                    $('#dataTable').on('click', '.btn-edit-feature', function () {
                        $('#modalFeature').modal('show');
                        let id = $(this).data('id');
                        let name = $(this).data('name');
                        let qty = $(this).data('qty');
                        let itemid = $(this).data('itemid');

                        $('.id').val(id)
                        $('.name').val(name)
                        $('.qty').val(qty)
                        $('.itemid').val(itemid)
                    })

                })
            </script>

</body>