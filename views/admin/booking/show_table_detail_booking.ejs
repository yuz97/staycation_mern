<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %>"
                    alt="<%= booking.payments.proofPayment %>" width="300" height="500">
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nama Member</th>
                                <th>Total</th>
                                <th>Bank From</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                <td><%= booking.total %> </td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col d-flex  justify-content-right">
                <% if (booking.payments.status == 'Process') { %>
                <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="post">
                    <button type="submit" class="btn btn-success btn-sm "><i class="fas fa-check"></i>
                        konfirmasi
                    </button>
                </form>

                <form action="/admin/booking/<%= booking.id %>/rejection?_method=PUT" method="post">
                    <button type="submit" class="btn btn-danger btn-sm ml-2"><i class="fas fa-times"></i>
                        reject
                    </button>
                </form>
                <% } %>


            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="/admin/booking" class="btn btn-warning btn-sm">kembali</a>
    </div>
</div>